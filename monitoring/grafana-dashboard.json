{
  "dashboard": {
    "id": null,
    "title": "Digital Procurement Platform Dashboard",
    "tags": ["agriculture", "food", "procurement"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Health Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(up{job=~\".*-service\"})",
            "legendFormat": "Healthy Services"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {},
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "green", "value": 8}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Request Rate by Service",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_total[1m])) by (job)",
            "legendFormat": "{{job}}"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "show": true
          }
        ]
      },
      {
        "id": 3,
        "title": "Response Time Percentiles",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket[5m])) by (le, job))",
            "legendFormat": "{{job}} 95th percentile"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds",
            "show": true
          }
        ]
      },
      {
        "id": 4,
        "title": "Procurement Activity",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(procurement_requests_total[1m])",
            "legendFormat": "Procurement Requests Rate"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/min",
            "show": true
          }
        ]
      },
      {
        "id": 5,
        "title": "Registered Farmers",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "count(farmer_info)",
            "legendFormat": "Total Farmers"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {},
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Active Suppliers",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 16},
        "targets": [
          {
            "expr": "count(supplier_status{status=\"active\"})",
            "legendFormat": "Active Suppliers"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {},
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "green", "value": 50}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Inventory Levels",
        "type": "singlestat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "avg(inventory_stock_level)",
            "legendFormat": "Avg Stock Level"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {},
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 20},
                {"color": "green", "value": 50}
              ]
            }
          }
        },
        "valueName": "current"
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "refresh": "5s"
  }
}